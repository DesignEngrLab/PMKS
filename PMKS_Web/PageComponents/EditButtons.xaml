<UserControl x:Class="PMKS_Silverlight_App.EditButtons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  >
    <StackPanel >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Open From File" Name="OpenButton" Click="OpenButton_Click"/>
            <Button Content="Save as CSV" Name="SaveButton" Click="SaveButton_Click"/>
            <Button Content="Save as XML" Name="SaveXMLButton" Click="SaveButton_Click"/>
            <Button Content="Copy URL" Name="URLButton" Click="SaveButton_Click"/>
            <Button Content="Simulate" x:Name="SimulateButton" Margin="0,0,0,0" Click="SimulateButton_Click" RenderTransformOrigin="-0.055,0.682" Width="78"
                    Visibility="Collapsed"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add New Row" Name="AddButton" Click="AddButton_Click" Width="102"/>
            <Button Content="Clear All Rows" Name="ClearButton" Click="ClearButton_Click" Width="102"/>
            <Button Content="Remove Row" Name="RemoveButton" Click="RemoveButton_Click" Width="100"/>
        </StackPanel>
    </StackPanel>
</UserControl>
