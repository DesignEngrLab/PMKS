<UserControl x:Class="PMKS_Silverlight_App.OutputStatus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:now="clr-namespace:PMKS_Silverlight_App" >
    <StackPanel Orientation="Horizontal" MaxHeight="320">
        <TextBox Name="StatusBox" MinWidth="320"  VerticalScrollBarVisibility="Visible" Background="#19FFFFFF" />
        <StackPanel >
        <Button Name="clearButton"  Content="Clear" Width="80"  Click="clearButton_Click" HorizontalAlignment="Left"/>
        <Button Name="saveAsFileButton" Content="Save as File" Width="80"  Click="saveAsFileButton_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>
