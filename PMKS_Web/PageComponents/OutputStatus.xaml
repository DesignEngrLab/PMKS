<UserControl x:Class="PMKS_Silverlight_App.OutputStatus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:now="clr-namespace:PMKS_Silverlight_App" >
    <StackPanel>
        <StackPanel Orientation="Horizontal">
        <Button Name="clearButton" Margin="0,0,5,0" Content="Clear" Width="60"  Click="clearButton_Click" HorizontalAlignment="Left"/>
        <Button Name="saveAsFileButton" Content="Save as File" Click="saveAsFileButton_Click"/>
        </StackPanel>
        <TextBox Name="StatusBox" MinWidth="320" MaxHeight="320" VerticalScrollBarVisibility="Visible" Background="#19FFFFFF" />
    </StackPanel>
</UserControl>
