<UserControl x:Class="PMKS_Silverlight_App.MainViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:src="clr-namespace:PMKS_Silverlight_App"
             MouseWheel="OnMouseWheel" 
              MouseLeftButtonUp="OnLostMouseCapture" MouseLeave="OnLostMouseCapture" LostMouseCapture="OnLostMouseCapture"
             MouseLeftButtonDown="OnMouseEnter"
             MouseMove="OnMouseMove" >
    <Canvas Grid.Column="0" Grid.Row="0" x:Name="MainCanvas" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
</UserControl>
