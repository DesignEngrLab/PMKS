<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:src="clr-namespace:PMKS_Silverlight_App"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="PMKS_Silverlight_App.MainViewer"
             MouseWheel="OnMouseWheel" 
              MouseLeftButtonUp="OnLostMouseCapture" MouseLeave="OnLostMouseCapture" LostMouseCapture="OnLostMouseCapture"
             MouseLeftButtonDown="OnMouseEnter"
             MouseMove="OnMouseMove" d:DesignWidth="313" d:DesignHeight="250" >
    <Canvas Background="Transparent" x:Name="MainCanvas">
        <Path Stroke="Gray" StrokeThickness="0.5">
            <Path.Data>
                <LineGeometry StartPoint="-1000,0" EndPoint="1000,0"/>
            </Path.Data>
        </Path>
        <Path Stroke="Gray" StrokeThickness="0.5">
            <Path.Data>
                <LineGeometry StartPoint="0,-1000" EndPoint="0,1000"/>
            </Path.Data>
        </Path>
    </Canvas>

</UserControl>
