<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:src="clr-namespace:PMKS_Silverlight_App" xmlns:Silverlight_PMKS="clr-namespace:Silverlight_PMKS"
    x:Class="PMKS_Silverlight_App.MainPage"
    mc:Ignorable="d"
    d:DesignHeight="674" d:DesignWidth="855">

    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF9DB9B8" Offset="1"/>
                <GradientStop Color="White"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="71" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <src:MainViewer />
        <TextBlock Text="PMKS: Planar Mechanism Kinematic Simulator" HorizontalAlignment="Left" FontSize="18" Width="418"/>
        <src:TimeSlider Grid.Row="1" HorizontalAlignment="Right" Width="18" />
        <src:EditButtons HorizontalAlignment="Left" Margin="10,25" Grid.RowSpan="2" Width="292"/>
        <src:JointInputTable Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="202" Width="479"  />
        <src:GlobalSettings HorizontalAlignment="Right" VerticalAlignment="Top" Height="64" Width="407"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="38" Width="239"  >
            <src:LinkInputTable/>
            <src:OutputStatus/>
        </StackPanel>
    </Grid>

</UserControl>
